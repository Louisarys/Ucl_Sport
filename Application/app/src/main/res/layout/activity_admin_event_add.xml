<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/back_ucl_sport">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Ajouter"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colorUclWhite"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:textSize="10dp">


        <EditText
            android:id="@+id/addId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/txtUserinfoPerso"
            android:hint="id"/>

        <EditText
            android:id="@+id/addSport"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_below="@+id/txtUserinfoPerso"
            android:hint="Sport"/>

        <EditText
            android:id="@+id/addSexe"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:layout_below="@+id/txtUserinfoPerso"
            android:hint="Sexe"/>
        <EditText
            android:id="@+id/addLieu"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:gravity="center"
            android:layout_below="@+id/txtUserinfoPerso"
            android:hint="Lieu"/>
        <EditText
            android:id="@+id/addSalle"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:gravity="center"
            android:layout_below="@+id/txtUserinfoPerso"
            android:hint="Salle"/>
        <EditText
            android:id="@+id/addJour"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:layout_below="@+id/txtUserinfoPerso"
            android:hint="Jour"/>
        <EditText
            android:id="@+id/addDate"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:gravity="center"
            android:layout_below="@+id/txtUserinfoPerso"
            android:hint="Date"/>
        <EditText
            android:id="@+id/addHD"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:gravity="center"
            android:layout_below="@+id/txtUserinfoPerso"
            android:hint="HD"/>
        <EditText
            android:id="@+id/addHF"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:gravity="center"
            android:layout_below="@+id/txtUserinfoPerso"
            android:hint="HF"/>
        <EditText
            android:id="@+id/addType"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:gravity="center"
            android:layout_below="@+id/txtUserinfoPerso"
            android:hint="Type"/>
        <EditText
            android:id="@+id/addInscription"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:gravity="center"
            android:layout_below="@+id/txtUserinfoPerso"
            android:hint="Inscription"/>
        <EditText
            android:id="@+id/addRemarques"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="330dp"
            android:gravity="center"
            android:layout_below="@+id/txtUserinfoPerso"
            android:hint="Remarques"/>
        <EditText
            android:id="@+id/addActive"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:gravity="center"
            android:layout_below="@+id/txtUserinfoPerso"
            android:hint="Active"/>
        <Button
            android:id="@+id/addEvent_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="390dp"
            android:text="Ajouter Ã©venement"/>
    </RelativeLayout>




</RelativeLayout>