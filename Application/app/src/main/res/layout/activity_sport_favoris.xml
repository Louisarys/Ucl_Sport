<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    tools:context="com.sport_ucl.sport_ucl.projet4.Main3Activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/back_ucl_sport"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Sport favoris"
        android:textColor="@color/colorUclWhite"
        android:gravity="center"
        android:textSize="25dp"
        android:id="@+id/SportFavorisTv"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        android:id="@+id/SportFavorisViewBar"
        android:layout_below="@+id/SportFavorisGrille"/>

    <GridLayout
        android:columnCount="6"
        android:rowCount="1"
        android:id="@+id/SportFavorisGrille"
        android:alignmentMode="alignMargins"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:padding="5dp"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="SPORT"
                    android:textSize="10dp"
                    android:textColor= "@color/colorUclWhite"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:padding="5dp"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="LIEU"
                    android:textSize="10dp"
                    android:textColor= "@color/colorUclWhite"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:padding="5dp"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="SALLE"
                    android:textSize="10dp"
                    android:textColor= "@color/colorUclWhite"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:padding="5dp"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="DATE"
                    android:textSize="10dp"
                    android:textColor= "@color/colorUclWhite"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:padding="5dp"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="HEURE DE DEBUT"
                    android:textSize="10dp"
                    android:textColor= "@color/colorUclWhite"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:padding="5dp"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="HEURE DE FIN"
                    android:textSize="10dp"
                    android:textColor= "@color/colorUclWhite"

                    />

            </LinearLayout>

        </LinearLayout>

    </GridLayout>

    <ListView
        android:id="@+id/listViewFavoris"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="120dp"/>






</RelativeLayout>
